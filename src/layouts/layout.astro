---
import Nav from "../components/nav/nav.jsx";
const { title } = Astro.props;
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href={Astro.resolve("../styles/global.scss")} />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#18083c" />
    <meta name="monetization" content="$ilp.uphold.com/biyqg2MkQKbe" />
  </head>
  <body>
    <div class="root">
      <main><slot /></main>
      <Nav />
    </div>
  </body>
</html>

<script>
  // Temporary because of Gatsby move. Leave in until... say February 2022?
  navigator.serviceWorker.getRegistrations().then(function (registrations) {
    for (let registration of registrations) {
      registration.unregister();
    }
  });
</script>

<style lang="scss">
  .root {
    display: grid;
    grid-template-columns: 3fr 300px;
    > nav {
      grid-column: 2;
    }
    @media (max-width: 770px) {
      grid-template-columns: 1fr;
      padding-top: 40px;
      > nav {
        grid-column: 1;
        grid-row: -1;
      }
    }
  }
  @media (max-width: 770px) {
    body.homepage .root > nav {
      margin-top: 0;
      grid-row: 2;
    }
  }
</style>
